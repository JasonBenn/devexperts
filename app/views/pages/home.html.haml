.navbar.container.blue-background
  %header
    %h1.brand DevExperts
    %p Look up the best developers by StackOverflow prowess and find their Twitter.

  %form#search
    %input.query{placeholder: 'keyword e.g. javascript', autofocus: 'autofocus', required: 'required'}
    %button{type: 'submit'}

.container
  #notice
    %img{src: 'https://pbs.twimg.com/profile_images/378800000226613002/36623ae09f553713c575c97c77544b49.jpeg'}
  %ul.results

%script#result-template{type: 'text/template'}
  %li
    ! <a href="<%= link %>"><img src="<%= profile_image %>"></a>
    %h1 <%= display_name %>
    %p
      %strong
        User's Relevance:
      <%= score %>
    %p
      %strong
        Total reputation:
      <%= reputation %>
    %span
      %strong
        Twitter:
    %span.twitter-handle
      <% if (twitter_handle) {  %>
      <a href="https://twitter.com/<%=twitter_handle%>">@<%= twitter_handle  %></a>
      <% } else { %>
      Searching...
      %i.fa.fa-spinner.fa-spin
      <% } %>
