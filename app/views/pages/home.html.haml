.navbar.container.blue-background
  %header
    %h1.brand DevExperts
    %p Look up the best developers by StackOverflow prowess and find their Twitter.

  %form#search
    %input.query{placeholder: 'keyword e.g. javascript', autofocus: 'autofocus', required: 'required'}
    %button{type: 'submit'}

.container
  %ul.results

%script#result-template{type: 'text/template'}
  %li
    %a(href="{{=link}}")
      %img(src="{{=profile_image}}")
    %h1 {{=display_name}}
    %p
      %strong
        "Post Count (?)":
      {{=post_count}}
    %p
      %strong
        User's Relevance:
      {{=score}}
    %p
      %strong
        Total reputation:
      {{=reputation}}
    %span
      %strong
        Twitter:
    %span.twitter-handle
      Searching...
      %i.fa.fa-spinner.fa-spin
